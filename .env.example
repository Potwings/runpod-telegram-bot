# RunPod API Key
# https://www.runpod.io/console/user/settings 에서 API Key 생성
# GraphQL API 권한 필요
RUNPOD_API_KEY=your_runpod_api_key_here

# Telegram Bot Token
# @BotFather에서 봇 생성 후 토큰 획득
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Telegram Chat ID
# @userinfobot 또는 @getmyid_bot 으로 확인
TELEGRAM_CHAT_ID=your_chat_id_here

# 모니터링 주기 (분 단위, 기본값: 60분)
CHECK_INTERVAL_MINUTES=60

# Webhook 설정 (선택사항 - 설정하지 않으면 Polling 모드)
# WEBHOOK_URL=https://your-domain.ngrok-free.app
# WEBHOOK_PORT=8443

# 허용된 사용자 ID (선택사항, 쉼표로 구분)
# ALLOWED_USER_IDS=123456,789012

# Pod 생성 시 선호 GPU 목록 (선택사항, 쉼표로 구분)
# 설정하지 않으면 기본 GPU 목록 사용 (RTX 4090, A6000, A100 등)
# PREFERRED_GPUS=NVIDIA GeForce RTX 4090,NVIDIA RTX A6000,NVIDIA A100 80GB PCIe
